<%= form_for @artist do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </fieldset>
  <fieldset>
    <%= f.label :nationality %>
    <%= f.text_field :nationality %>
  </fieldset>
  <fieldset>
    <%= f.label :dob, "Date of birth" %>
    <%= f.text_field :dob %>
  </fieldset>
  <fieldset>
    <%= f.label :period %>
    <%= f.text_field :period, :placeholder => 'Early 20th Century' %>
  </fieldset>
  <fieldset>
    <%= f.label :image %>
    <%= f.url_field :image %>
  </fieldset>
  <fieldset>
    <label></label>
    <%= f.submit %>
  </fieldset>
<% end %>
